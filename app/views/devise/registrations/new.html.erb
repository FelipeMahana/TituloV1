<div class="vertical-center">

<h2>Registrarse</h2>

<div class="form-group">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-text text-muted form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Ingrese Email',class: 'form-control' %>
  </div>

  <div class="field form-text text-muted form-group">
    <%= f.label :nombre %>
    <em>(opcional)</em><br />
    <%= f.text_field :name, autocomplete: "name", placeholder: 'Nombre',class: 'form-control' %>
  </div>

  <div class="field form-text text-muted form-group">
    <%= f.label :contrase単a %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Contrase単a',class: 'form-control' %>
  </div>

  <div class="field form-text text-muted form-group">
    <%= f.label :confirmacion_contrase単a %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Contrase単a',class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse", class: 'btn btn-primary' %>
  </div>
<% end %>

</div>

<%= render "devise/shared/links" %>

</div>

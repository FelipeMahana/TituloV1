<div class="vertical-center">

<h2>Inicio Sesión</h2>

<div class="form-group">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-text text-muted form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Ingrese Email',class: 'form-control' %>
  </div>

  <div class="field form-text text-muted form-group">
    <%= f.label :conraseña %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Contraseña',class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field ">
      <%= f.check_box :remember_me %>
      <%= f.label :Recordar_cuenta %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Ingresar" %>
  </div>
<% end %>

</div>

<%= render "devise/shared/links" %>

</div>
